<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src=@Url.Content("~/img/TM.png") style="top:10px; height:50px; width: 65px" />
                @Html.ActionLink("Task Management", "Index", "Projects", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Afisare proiecte", "Index", "Projects")</li>
                        <li>@Html.ActionLink("Adaugare echipe", "New", "Teams")</li>
                        <li>@Html.ActionLink("Afisare useri", "Index", "Users")</li>

                    }

                    @if (User.IsInRole("Organizator") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Adauga proiect", "New", "Projects")</li>

                    }
                    @if (User.IsInRole("User"))
                    {@* util pot aduga proiecte si devin automat organizatori*@
                    <li>@Html.ActionLink("Adauga proiect", "New", "Projects")</li>

                }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer-position">
            <p>Proiect realizat de Coiculescu Veronica si Vijulan Stefania, grupa 241</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
