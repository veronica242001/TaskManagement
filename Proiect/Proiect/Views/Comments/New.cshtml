@using Task_Management.Models
@model Comment
    <br />
<div class="edit-proiect">
    <div class="afisare1">
        <br />
        @using (Html.BeginForm(actionName: "New", controllerName: "Comments"))
        {
            @Html.HiddenFor(m => m.TaskId, @Model.TaskId)
            <h3>@Html.Label("Content", "Comentariul dumneavoastra")</h3>
            <br />
            @Html.TextBox("Content", null, new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger" })
            <br /><br />
            <button class="btn btn-sm btn-default" type="submit">Adauga comentariu</button><br /><br />
        }
    </div>
</div>