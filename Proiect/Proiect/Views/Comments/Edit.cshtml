

@model Task_Management.Models.Comment
<div class="edit-proiect">
    <br />

    <form method="post" action="/Comments/Edit/@Model.CommentId">
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.Hidden("CommentId")
        
        <h3>@Html.Label("Content", "Continut comentariu")</h3>

        
        @Html.EditorFor(m => m.Content) <br />
        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        <br />

        <button type="submit" class="btn btn-default"> Modifica comentariul </button>
        <br /> <br />
    </form>
</div>