
@if (TempData.ContainsKey("message"))
{
    <h1>@ViewBag.message</h1>
}
<br />
 <a class="btn btn-info pull-left" href="/Projects/Index">Lista Proiecte</a><br />
<h2> Lista echipe</h2>
<br />

<div class="container">
    <div class="row">
        @foreach (var team in ViewBag.Teams)
        {
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading"><h3>@team.Name</h3></div>

                    <div class="panel panel-footer">
                        <a class="btn btn-default btn-lg btn-block" href="/Teams/Show/@team.TeamId">Afisare echipa</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
